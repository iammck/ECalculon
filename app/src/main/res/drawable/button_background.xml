<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <corners
        android:radius="6dp"
        />
    <gradient
        android:angle="45"
        android:centerX="35%"
        android:centerColor="@color/bright_yellow_translucent"
        android:startColor="@color/brightest_yellow_translucent"
        android:endColor="@color/brighter_yellow_translucent"
        android:type="linear"
        />
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"
        />
    <size
        android:width="40dp"
        android:height="40dp"
        />




</shape>

